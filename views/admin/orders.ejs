<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders Page</title>
    <link rel="stylesheet" href="/css/admin/category.css"> 
    <link rel="stylesheet" href="/css/admin/main.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <!-- Sidebar -->
    <%- include('partials/_sidebar') %>

    <!-- Main Content -->
    <div class="main-content">
        <%- include('partials/_header') %>
        <h2>Orders</h2>

        <div class="category-section">
            <table class="order-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th>Total Price</th>
                        <th>Payment Method</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(function(order) { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.userID.username %></td>
                        <td><%= order.orderStatus %></td>
                        <td>â‚¹<%= order.totalAmount %></td>
                        <td><%= order.paymentMethod %></td>
                        <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                        <td>
                            <div class="action-buttons">
                                <select class="status-select" onchange="changeOrderStatus('<%= order._id %>', this.value)">
                                    <option value="Pending" <%= order.orderStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="Processing" <%= order.orderStatus === 'Processing' ? 'selected' : '' %>>Processing</option>
                                    <option value="Shipped" <%= order.orderStatus === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                    <option value="Delivered" <%= order.orderStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                    <option value="Cancelled" <%= order.orderStatus === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                </select>
                            </div>
                        </td> 
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>" class="prev-btn">Previous</a>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
            <% } %>
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>" class="next-btn">Next</a>
            <% } %>
        </div>
    </div>
</body>


<script>
    function changeOrderStatus(orderId, newStatus) {
    axios.put(`/admin/orders/${orderId}/status`, { status: newStatus })
        .then(response => {
            // Handle success, maybe show a success message or update the UI
            console.log('Status updated successfully:', response.data);
            // Optionally reload the page or update the status in the UI
            location.reload();
        })
        .catch(error => {
            // Handle error
            console.error('Error updating status:', error);
            alert('Failed to update status. Please try again.');
        });
}

</script>

</html>
